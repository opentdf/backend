{
  "name": "tdf3-xtest",
  "version": "0.0.1",
  "description": "Simple example to encrypt and decrypt files in the TDF3 spec.",
  "scripts": {
    "pretty": "prettier --write \"./**/*.{css,md,js,jsx,json}\"",
    "test": "npm run test-develop01",
    "build-oss": "webpack -p",
    "test-buildkite": "npm ci && npm run test-$TDF3_STAGE",
    "test-complete-buildkite": "./scripts/update-versions-under-test && npm run test-buildkite",
    "test-eternos": "python3 test/runner.py -o $VIRTRU_SDK_EMAIL -s eternos --sdks sdk/js/node/cli.sh sdk/py/oss/cli.sh",
    "test-virtrunetes": "python test/runner.py -o Charlie_1234 -s virtrunetes --sdks sdk/js/node/cli.sh sdk/py/oss/cli.sh"
  },
  "dependencies": {
    "colors": "^1.3.2",
    "commander": "^5.1.0",
    "express": "4.16.4",
    "puppeteer": "^10.0.0",
    "tdf3-js": "git+ssh://git@github.com/virtru/tdf3-js.git#feature/binfixnow",
    "virtru-sdk": "^2.3.1-beta.2.1"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1"
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index -g",
      "pre-commit": "pretty-quick --pattern \"xtest/**\" --staged && ../scripts/shfmt"
    }
  }
}
